@model IEnumerable<LabProject.Test>
@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Test", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
        <input type="submit" value="Search" /> <input value="Add Test" type="button" class="btn btn-info btn-circle-xl m-166" onclick="location.href='@Url.Action("Create", "Test" )'" />

    </div>
    <div class="card-deck">
        <div class="owl-carousel owl-theme">
            @foreach (var test in Model)
            {
                <div class="card border-success mb-4" style="max-width: 22rem;">
                    <div class="card-header">
                        @test.TestName
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">@test.TestReportDuration</h6>
                        <p class="card-text">@test.TestReportDuration</p>
                        <a href="@Url.Action("LabDetail","Lab", new { labId=test.Testid})" class="card-link">Learn More</a>
                        <input value="Edit Lab" type="button" class="btn btn-info btn-circle-xl m-166" onclick="location.href='@Url.Action("Edit", "Test", new {testId=test.Testid} )'" />
                    </div>
                </div>

            }
        </div>
    </div>

}
<script>

    $('.owl-carousel').owlCarousel({
        loop: false,
        margin: 10,
        nav: true,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 3
            },
            1000: {
                items: 3
            }
        }
    })


</script>       