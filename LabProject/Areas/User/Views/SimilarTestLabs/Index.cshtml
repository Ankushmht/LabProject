@model IEnumerable<LabProject.Models.ViewModel.TestLab>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";
}

<input type="hidden" value="user11" id="username" />

@using (Html.BeginForm("Index", "LabTest", FormMethod.Get))
{
    @Model.First().tests.TestName;
    <div class="table-responsive">
        <table class="table">
            <th>
                lab Name
            </th>
            <th>
                Price
            </th>
            <th>
                Book Test
            </th>
            @foreach (var tp in Model)
            {
                <tr>

                    <td>@tp.Labs.LabName </td>
                    <td>@tp.Price </td>
                    <td>
                        <button type="button" class="btn btn-default btn-lg myBtn" data-assigned-id="@tp.tests.Testid" id="myBtn">Book Test</button>

                    </td>
                </tr>
            }

        </table>
        <div class="container">

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-head" style="padding:35px 50px;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h3><span class="glyphicon glyphicon-eye-open"></span>Login to Book Your Test</h3>
                        </div>
                        <div class="modal-body" style="padding:40px 50px;">
                            <form role="form">
                                <div class="form-group">
                                    <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
                                    <input style="width:100%!important" type="text" class="form-control" id="usrname" placeholder="Enter email">
                                </div>
                                <div class="form-group">
                                    <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
                                    <input type="text" class="form-control" id="psw" placeholder="Enter password">
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="" checked>Remember me</label>
                                </div>
                                <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Login</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <p>Not a member? <a href="#">Sign Up</a></p>
                            <p>Forgot <a href="#">Password?</a></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
}

<script>
    $(document).ready(function () {
        $(".myBtn").click(function () {
            var testId= $(this).data('assigned-id');
            if ($('#username').val() != 'user') {
                callAction(testId);
            }
            else {
                $("#myModal").modal();
            }

        });

        function callAction(tid) {

            $.ajax({
                // edit to add steve's suggestion.
                //url: "/ControllerName/ActionName",
                url: '@Url.Action("RegisterOrLogin", "SimilarTestLabs")',
                
                success: function (data) {
                    // your data could be a View or Json or what ever you returned in your action method
                    // parse your data here
                    alert(data);
                }
            });
        }

    });
</script>
<style>

    .modal-head {
        display: -ms-flexbox;
        -ms-flex-align: start;
        /* align-items: flex-start; */
        -ms-flex-pack: justify;
        justify-content: space-between;
        padding: 1rem 1rem;
        border-bottom: 1px solid #dee2e6;
        border-top-left-radius: 0.3rem;
        border-top-right-radius: 0.3rem;
        background-color: #28a745;
        color:white;
    }
    .text-center {
        text-align:left!important;
    }
</style>
